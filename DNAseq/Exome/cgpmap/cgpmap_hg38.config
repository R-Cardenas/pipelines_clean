    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
    executor = 'slurm'
    queue = 'compute-16-64'
    }
    withName:bam_index {
      container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
      executor = 'slurm'
      queue = 'compute-16-64'
