    queue = 'compute-16-64'
    }
  withName:verifybamid {
    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
    executor = 'slurm'
    queue = 'compute-16-64'
    }
  withName:somalier {
    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
    queue = 'compute-16-64'
