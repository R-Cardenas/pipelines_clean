    }
  withName:merge_caller_indels {
    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
    queue = 'compute-16-64'
    }
  withName:indels_filter {
    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
    queue = 'compute-16-64'
    }
  withName:indels_sort {
    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
    queue = 'compute-16-64'
    }
  withName:VEP2 {
    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
    queue = 'compute-16-64'
    }
  withName:vep_header {
    container = '/gpfs/afm/cg_pipelines/Pipelines/singularity/images/pipeline1_bundle.simg'
